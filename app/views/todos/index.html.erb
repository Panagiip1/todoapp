<h1>Δeίξε όλα τα Todos</h1>

<p>
	<%= link_to "Δημιούργησε ένα Todo", new_todo_path %>
</p>

<table>
	<tr>
		<th>Όνομα</th>
		<th>Περιγραφή</th>
	</tr>
	<% @todos.each do |todo| %>
		<tr>
			<td><%= todo.name %></td>
			<td><%= todo.description %></td>
			<td><%= link_to "Edit", edit_todo_path(todo) %></td>
			<td><%= link_to "Show", todo_path(todo) %></td>
			<td><%= link_to "Delete", todo_path(todo), method: :delete, data: {confirm: "Είσαστε βέβαιος?"} %></td>
		</tr>
	<% end %>
</table>