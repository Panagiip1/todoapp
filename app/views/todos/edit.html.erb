<h1>Edit ένα υπάρχων Todo</h1>

<% if @todo.errors.any? %>
	<h2>Τα ακόλουθα errors αποφευγουν τις todo απο να σωθούν</h2>
	<ul>
		<% @todo.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @todo do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %> <br>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>